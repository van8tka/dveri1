@model  dveri2.Models.ModelBreadCrumbs
@{
    Layout = null;
}
<div class="breadcrumbs">
    <hr class="razdTov">

    @*//для страницы главная*@
    <a class="homebreadcrumbs" style="margin-top:-2px;" href="/MegkomnatnyeDveri/DveriMegkomnatnye"> <span class="glyphicon glyphicon-home"></span></a>
      
    @*другие главные разделы сайта*@
    @if (Model.NamePartSite != null)
    {
        if (Model.NamePartSite == "Межкомнатные двери")
        {
             <a href="/MegkomnatnyeDveri/DveriMegkomnatnye"><span class="glyphicon glyphicon-chevron-right" style="font-size:0.7em"></span><span class="ml10">Межкомнатные двери</span> </a>
        }
     
        if (Model.NamePartSite == "Полезное")
        {
            <a href="/Articles/GetArticles"><span class="glyphicon glyphicon-chevron-right" style="font-size:0.7em"></span><span class="ml10">Полезное</span> </a>
            if (Model.NameProduct != null)
            {
                <a><span class="glyphicon glyphicon-chevron-right" style="font-size:0.7em"></span><span class="ml10">@Model.NameProduct</span> </a>
            }
        }
             
    }
    @if (Model.NameCategory != null)
    {
        <a href="/MegkomnatnyeDveri/DveriMegkomnatnye/?firma=@Model.NameCategory"><span class="glyphicon glyphicon-chevron-right" style="font-size:0.7em"></span><span class="ml10">@Model.NameCategory</span> </a>
        if (Model.NameProduct != null)
        {
            <a><span class="glyphicon glyphicon-chevron-right" style="font-size:0.7em"></span><span class="ml10">@Model.NameProduct</span> </a>
        }
    }

    <hr class="razdTov">
</div>
