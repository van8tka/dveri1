        <div class="navigationfixedtop">
            <div class="content mt10">
                <div class="brand fll">
                    <div class="fll mr10">
                        <a href="/MegkomnatnyeDveri/MegkomnatnyeDveriIndex"> <img src="~/Content/logo1.png" alt="" style="width:35px;height:35px;" /></a>
                    </div>
                    <div class="fll mr10" style="max-width:400px;">
                        <a href="/MegkomnatnyeDveri/MegkomnatnyeDveriIndex">Люксеврострой - входные двери, межкомнатные двери, фурнитура, напольные покрытия</a>
                    </div>
                </div>
                @Html.Action("ContactOnPanel", "MegkomnatnyeDveri")

            </div>
            <div style="background:#fff;color:#666;font:12px/18px Tahoma, Arial, Helvetica, sans-serif;">
                <div id="menu">
                    <ul>
                        <li>@Html.ActionLink("Главная", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m1" })</li>
                        <li>@Html.ActionLink("Входные двери", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m2 current" })</li>
                        <li>@Html.ActionLink("Межкомнатные двери", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m3" })</li>
                        <li>@Html.ActionLink("Доставка и оплата", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m5" })</li>
                        <li>@Html.ActionLink("Отзывы", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m6" })</li>
                        <li>@Html.ActionLink("Контакты", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m7" })</li>
                        <li>@Html.ActionLink("Установка", "MegkomnatnyeDveriIndex", "MegkomnatnyeDveri", null, new { @class = "mainmen m8" })</li>
                        <li>@Html.ActionLink("Статьи", "GetArticles", "Articles", null, new { @class = "mainmen m9" })</li>

                    </ul>
                </div>
            </div>
        </div>

        <div class="content-body">
            @RenderBody()

        </div>

        @if (TempData["messageklient"] != null)
            {
            <div class="alertmessage">@TempData["messageklient"]</div>
        }
        @Scripts.Render("~/bundles/jquery")

        @RenderSection("scripts", required: false)
    </div>
    <div id="modal_form_fastbuy">
        <span id="modal_close">X</span> <!-- Кнoпкa зaкрыть -->
        @Html.Action("FastBuyDveriModal", "MegkomnatnyeDveri", new { id = 9999, type = "входные двери" })
