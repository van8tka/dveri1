@using dveri2.HtmlHelpers;

@model dveri2.Models.ForMainModel
<div class="allspisok">
    <div style="text-align:center;font-size:0.8em;">
        <h1>@Model.SeoHead</h1>
    </div>
    @foreach (var i in Model.ListMkDv)
    {

        <div class="shortproduct">
           <a href="~/MegkomnatnyeDveri/TovarPage?id=@i.Id&flag=@Model.FlagMaterial.ToString()">             
              <div class="imageshort">
                        @if (i.Skidka == null || i.Skidka == 0)
               {
                   if (i.FotoMegkomnDvereys.FirstOrDefault() == null)
                   {
                                <img class="img-thumbnail" src="~/Content/imageDefault.jpg" alt="фото @i.Nazvanie отсутствует" title="фото @i.Nazvanie отсутствует" />
                            }
                            else
                            {
                                <img class="img-thumbnail" src="@Url.Action("GetImage", "MegkomnatnyeDveri", new { i.Id })" alt="фото @i.Nazvanie" title="фото @i.Nazvanie" />
                            }
                        }
                        else
                        {
                            if (i.FotoMegkomnDvereys.FirstOrDefault() == null)
                            {
                                <div class="blockpercent">
                                    <span class="percent">@i.Skidka%</span>
                                </div>
                                <img class="img-thumbnail" src="~/Content/imageDefault.jpg" alt="фото @i.Nazvanie отсутствует" title="фото @i.Nazvanie отсутствует" />
                            }
                            else
                            {
                                <div class="blockpercent">
                                    <span class="percent">@i.Skidka%</span>
                                </div>
                                <img class="img-thumbnail" src="@Url.Action("GetImage", "MegkomnatnyeDveri", new { i.Id })" alt="фото @i.Nazvanie" title="фото @i.Nazvanie" />
                            }
                        }
                    </div>
                    <div>
                        <div style="width:100%;height:86px;overflow:hidden;">
                            <p>@i.Nazvanie</p>
                            <p>@i.Proizvoditel</p>
                            <p>@i.Strana</p>
                        </div>

                        @if (i.Skidka == null || i.Skidka == 0)
                    {
                        if (i.Cena == 0 || i.Cena == null)
                        {
                                <p style="color:green; font-size:medium">Цену уточняйте у менеджера.</p>
                            }
                            else
                            {
                                <p style="color:green; font-size:large">@i.Cena.Value.ToString("C")</p>
                            }

                        }
                        else
                        {
                            if (i.Cena == 0 || i.Cena == null)
                            {
                                <p style="color:green; font-size:medium">Цену уточняйте у менеджера.</p>
                            }
                            else
                            {
                                <p style="color:black; font-size:large"><strike>@i.Cena.Value.ToString("C")</strike></p>
                                <p style="color:green; font-size:large">@i.CenaSoSkidkoy.Value.ToString("C")</p>
                            }


                        }
                    </div>
             </a>
        </div>

    }
</div>
<div style="clear:both">

</div>

