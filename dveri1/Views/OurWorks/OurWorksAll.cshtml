@model dveri1.Models.ModelOurWorks
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.Keywords = Model.SeoKey;
    ViewBag.Description = Model.SeoDesc;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbsonpage">
    @Html.Action("BreadCrumbs", "VhodnyeDveri", new { namepart = "Наши работы" })
</div>
<div class="pad25">
    <div class="headPageProduct">
        <h1>@Model.SeoHead</h1>
    </div>

    @if (Model.ListOurWorks.Count() > 0)
    {

        foreach (var i in Model.ListOurWorks)
        {
            <div class="textOurWorks">
                @Html.Raw(i.TextOurWorks)
            </div>
         <div class="allImgWork tac">
             @foreach (var f in i.TableFotoOurWorks)
             {        
                 @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(f.Image) + "\"/>")<br />          
             }
         </div>         
        }
    }
    else
    {
        <p>На сайте нет ни одной работы..</p>
    }
</div>
<div class="pager">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("OurWorksAll", new { page = x, PageSize = Model.PageInfo.ItemsPerPage }))
</div>
<script>
    $(".mainmen").removeClass("current")
    $(".m5").addClass("current")
</script>