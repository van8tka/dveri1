@model dveri1.Models.ForMainModel
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.Keywords = Model.SeoKey;
    ViewBag.Description = Model.SeoDesc;
}

<!-- Непосредственный код слайдера -->

<link href="~/Content/nivo-slider.css" rel="stylesheet" />

    <div class="leftMainMenu">
    <div class="dvSortCost">
        Cортировать по цене:
    </div>
    <div class="buttonsort">
        @switch (Model.Sort)
        {
            case 0:
                {
                    @Html.ActionLink("по возрастанию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 1, brand = Model.CurrentBrand }, new { @class = "upsort" })
                    @Html.ActionLink("по убыванию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 2, brand = Model.CurrentBrand }, new { @class = "downsort" })
                    break;
                }
            case 1:
                {
                    @Html.ActionLink("по возрастанию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 1, brand = Model.CurrentBrand }, new { @class = "upsort actsortup" })
                    @Html.ActionLink("по убыванию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 2, brand = Model.CurrentBrand }, new { @class = "downsort" })
                    break;
                }
            case 2:
                {
                    @Html.ActionLink("по возрастанию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 1, brand = Model.CurrentBrand }, new { @class = "upsort" })
                    @Html.ActionLink("по убыванию", "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 2, brand = Model.CurrentBrand }, new { @class = "downsort actsortdown" })
                    break;
                }

            default:
                break;

        }
    </div>
    @*меню выбора брэнда*@
    <div>
        <div class="MenKataltext">
            Каталог товаров:
        </div>
        <div>
            @Html.ActionLink("ВХОДНЫЕ ДВЕРИ ВЕСЬ СПИСОК", "VhodnyeDveriIndex", "VhodnyeDveri", new { brand = "весьтовар", id = 1, sort = 0 }, new { @class = "leftMenuButton весьтовар" })
            @foreach (var i in Model.Brand)
            {
                if (i != null)
                {
                    @Html.ActionLink("Входные двери " + i, "VhodnyeDveriIndex", "VhodnyeDveri", new { id = 1, sort = 0, brand = i }, new { @class = "leftMenuButton " + i.Replace(" ", string.Empty) })
                }
            }
        </div>
    </div>
    @*статьи 5 последних с сылками на их же*@
    <div>
        @Html.Action("GetFiveArticles", "Articles")
    </div>
</div>

@*слайдер*@
        <div class="MainSlider">
            <div id="slider" class="nivoSlider">
                @foreach (var item in Model.SliderImg)
                {
                    <a style="display:block;" href=@item.LinkImage>
                        @Html.Raw("<img alt='' title='' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Imaging) + "\" />")
                    </a>
                  
                }
            </div>
        </div>
@*хлебные крошки*@
        <div class="MainBredcrumbs">
            @Html.Action("BreadCrumbs", "VhodnyeDveri", new { mainmodel = Model, namepart = "Входные двери" })
        </div>


   
<div class="productlist" id="listproduct">
    @Html.Partial("ProductList")
</div>
<div style="clear:both">

</div>
@*появляется при догрузке страницы*@
<div class="idloading" id="loading">
    <img src="~/Content/loading.gif" alt="" class="doLoadingImg" />
</div>
@*разбиение на страничный режим*@
<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("VhodnyeDveriIndex", new { id = x, sort = Model.Sort, brand = Model.CurrentBrand, PageSize = Model.PagingInfo.ItemsPerPage }))
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.nivo.slider.pack.js")

    <!-- Запуск слайдера -->

    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider({
                effect: 'sliceUpLeft',
                animSpeed: 1500,
                pauseTime: 7000,
                directionNav: true,
                directionNavHide: true,
                controlNav: true,
                pauseOnHover: true,
                keyboardNav: true,
                controlNavThumbs: false
            });
        });
    </script>

