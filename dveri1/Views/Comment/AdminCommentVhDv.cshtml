@model dveri1.Models.ModelCommentVhDv
@{
    ViewBag.Title = "Комментарии о входных дверях";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="tablecontent">
    <div style="margin:1em;">
        @Html.ActionLink("О компании", "AdminCommentCompany", "Comment", new { @class = "tablebut", style = "width:250px" })
        @Html.ActionLink("О входных дверях", "AdminCommentVhDv", "Comment", new { @class = "tablebut", style = "width:250px;background:#9ACD32;" })
        @Html.ActionLink("О межкомнатных дверях", "AdminCommentVhDv", "Comment", new { @class = "tablebut", style = "width:250px" })
    </div>
    <hr />
    <table class="table_dark" style="width:1040px;">
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Код двери</th>
            <th>Название двери</th>
            <th>Имя</th>
            <th>E-mail</th>
            <th>Звезды</th>
            <th>Заголовок</th>
            <th>Комментарий</th>
            <th>Ответ</th>
            <th>Публикация</th>
            <th></th>
        </tr>
        @foreach (var i in Model.CommentVhDvList)
        {
            <tr>
                <td class="tac">@Html.ActionLink(i.ID.ToString(), "AdminEditCommentVhDv", "Comment", new { id = i.ID }, null)</td>
                <td>@Html.ActionLink(i.Date.ToString(), "AdminEditCommentVhDv", "Comment", new { id = i.ID }, null)</td>
                <td>@i.IDdv</td>
                <td>@i.VhodnyeDveri.Nazvanie</td>
                <td>@i.Name</td>
                <td>@i.E_mail</td>
                <td class="tac">@i.Stars</td>
                <td>@i.Heading</td>
                <td>@i.Comment</td>
                <td>@i.Response</td>
                <td class="tac"> @Html.CheckBoxFor(modelItem => i.Public)</td>
                <td>
                    @Html.ActionLink("Удалить", "AdminDellCommentVhDv", "Comment", new { id = i.ID }, new { @class = "tablebut", style = "width:60px" })
                </td>
            </tr>
        }
    </table>

</div>



