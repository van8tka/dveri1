@model dveri1.Models.ModelCommentMkDv
@{
    ViewBag.Title = "Комментарии о межкомнатных дверях";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="tablecontent">
    <div style="margin:1em;">
        @Html.ActionLink("О компании", "AdminCommentCompany", "Comment", new { @class = "tablebut", style = "width:250px" })
        @Html.ActionLink("О входных дверях", "AdminCommentVhDv", "Comment", new { @class = "tablebut", style = "width:250px;" })
        @Html.ActionLink("О межкомнатных дверях", "AdminCommentMkDv", "Comment", new { @class = "tablebut", style = "width:250px;background:#9ACD32;" })
    </div>
    <hr />
    <table class="table_dark" style="width:1040px;">
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Код двери</th>
            <th>Название двери</th>
            <th>Имя</th>
            <th>E-mail</th>
            <th>Звезды</th>
            <th>Заголовок</th>
            <th>Комментарий</th>
            <th>Ответ</th>
            <th>Публикация</th>
            <th></th>
        </tr>
        @foreach (var i in Model.CommentMkDvList)
        {
            <tr>
                <td class="tac">@Html.ActionLink(i.ID.ToString(), "AdminEditCommentMkDv", "Comment", new { id = i.ID }, null)</td>
                <td>@Html.ActionLink(i.Date.ToString(), "AdminEditCommentMkDv", "Comment", new { id = i.ID }, null)</td>
                <td>@i.IDdv</td>
                <td>@i.MegkomnatnyeDveri.Nazvanie</td>
                <td>@i.Name</td>
                <td>@i.E_mail</td>
                <td class="tac">@i.Stars</td>
                <td>@i.Heading</td>
                <td>@i.Comment</td>
                <td>@i.Response</td>
                <td class="tac"> @Html.CheckBoxFor(modelItem => i.Public, new { @class = "chpubliccomvhdv", id = i.ID })</td>
                <td>
                    @Html.ActionLink("Удалить", "AdminDellCommentMkDv", "Comment", new { id = i.ID }, new { @class = "tablebut", style = "width:60px" })
                </td>
            </tr>
        }
    </table>

</div>
<script type="text/javascript">
    //определяем Id кликнутого элемента
    $('.chpubliccomvhdv').click(function () {
        var id = $(this).attr('id');
        var temp = "?list=комментариймежкомнатныхдверей";
             $.ajax({//и вызываем ajax функцию
                type: 'GET',
                url: '/AdminMkDv/ChangePublic/' + id+temp,
                success: function (data) {
                }
            });

        });

    $(".admmen").removeClass("actadmin")
    $(".m11").addClass("actadmin")

</script>
