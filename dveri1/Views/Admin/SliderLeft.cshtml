@model dveri1.Models.SliderModel
@{
    ViewBag.Title = "Боковой слайдер";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="tablecontent">
    @using (Html.BeginForm("SliderLeft", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    { <div class="form-group">
        <h3> Изображения бокового слайдера (добавляйте изображения формата 200px*400px или кратные им для корректного отображения):</h3><br />
        <div style="position:relative;display:block">
            @foreach (var item in Model.SliderLI)
            {
                <div style="margin:20px;float:left;">
                    @Html.Raw("<img style='width:200px; height:400px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Imaging) + "\" />")
                    <br />
                    @Html.ActionLink("Удалить изображение " + item.Id, "DellSlideLeft", "Admin", new { id = item.Id }, new { @class = "tablebut", style = "width:170px" })
                </div>
            }
            @for (int i = 0; i < 8 - Model.CountSlide; i++)
            {
                <input type="file" name="fileUpload[@i]" /><br />
            }
        </div>
    </div>
        if (Model.CountSlide < 8)
        {
            <div style="margin-bottom:20px;display:block;float:left;">
                <input type="submit" value="Сохранить" class="showadd" />
                @Html.ActionLink("Отменить", "Panel")
            </div>
        }
    }
</div>
