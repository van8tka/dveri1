<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*  *@
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-content">
    <div class="body-admin">
        <div class="navigationleftfixed" style="z-index:4">
            <div style="text-align:center;margin-top:20px">
                <div>
                    @Html.ActionLink("ЕВРОСТОРОЙ", "VhodnyeDveriIndex", "VhodnyeDveri")
                </div>
              
                <div class="mt10">
                    @Html.ActionLink("Выход", "LogOff", "Account", null, new { @class = "showadd" })
                </div>             
            </div>

        

         <ul class="treespis dropspis">
              <li class="ms">
                 @Html.ActionLink("Для SEO", "SeoGet", "MetaTags", null, new {@class="admmen m1"})
              </li>
             <li class="ms">
                 @Html.ActionLink("Входные двери", "Panel", "Admin", null, new { @class = "admmen m2 actadmin" })
                 @Html.Action("MenuAdmin", "Admin")
             </li>
             <li class="ms">
                 @Html.ActionLink("Межкомнатные двери", "PanelMkDv", "AdminMkDv", null, new { @class = "admmen m3" })
                 @Html.Action("MenuAdminMkDv", "AdminMkDv")
             </li>
             <li class="ms">
                 @Html.ActionLink("Главный слайдер", "SliderMain", "Admin", null, new { @class = "admmen m4" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Боковой слайдер", "SliderLeft", "Admin", null, new { @class = "admmen m5" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Доставка", "SvedenijaDostavka", "Admin", null, new { @class = "admmen m6" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Оплата", "SvedenijaOplata", "Admin", null, new { @class = "admmen m7" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Статьи", "AdminGetArticles", "Articles", null, new { @class = "admmen m8" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Контакты", "AdminContact", "Contact", null, new { @class = "admmen m9" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Пользователи", "UserPage", "Admin", null, new { @class = "admmen m10" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Отзывы", "AdminCommentCompany", "Comment", null, new { @class = "admmen m11" })
             </li>
             <li class="ms">
                 @Html.ActionLink("Установка", "AdminYstanovka", "AboutYstanovka", null, new { @class = "admmen m12" })
             </li>
          </ul>
         
        </div>

        <div class="content-admin">
            @RenderBody()
        </div>
        <div>
            @if (TempData["message"] != null)
            {
                <div class="alertmessage">@TempData["message"]</div>
            }
        </div>
        @Scripts.Render("~/bundles/jquery")

        @RenderSection("scripts", required: false)
        @*для раскрывающегося списка меню*@
        <script>         
            $(".dropspis").find("li:has(ul)").prepend('<div class="drop"></div>');
            //проверяем наличие элемента для оперделения страницы списка товаров
            if (!$("a").is(".newdoor"))
            {
                $(".dropspis").find("ul").slideUp(1).parents("li").children("div.drop").css({ 'background-position': "0 0" });
            }              
                $(".dropspis div.drop").click(function () {
                    if ($(this).nextAll("ul").css('display') == 'none') {
                        $(this).nextAll("ul").slideDown(400);
                        $(this).css({ 'background-position': "-11px 0" });
                    } else {
                        $(this).nextAll("ul").slideUp(400);
                        $(this).css({ 'background-position': "0 0" });
                    }
                });              
        </script>
    </div>
</body>
</html>
