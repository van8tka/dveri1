<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*  *@
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-content">
    <div class="body-admin">
        <div class="navigationleftfixed" style="z-index:4">
            <div style="text-align:center;margin-top:20px">
                @Html.ActionLink("ЕВРОСТОРОЙ", "Index", "Home")
            </div>
           
          <ul class="menuleft">
              <li>
                  @Html.ActionLink("Входные двери","Panel","Admin")
              </li>
              <li>
                  @Html.ActionLink("Межкомнатные двери", "Panel", "Admin")
              </li>
              <li>
                  @Html.ActionLink("Главный слайдер", "SliderMain", "Admin")
              </li>
              <li>
                  @Html.ActionLink("Доставка", "Panel", "Admin")
              </li>
              <li>
                  @Html.ActionLink("Статьи", "Panel", "Admin")
              </li>
              <li>
                  @Html.ActionLink("Контакты", "Panel", "Admin")
              </li>
          </ul>
         
        </div>

        <div class="content-admin">
            @RenderBody()
        </div>
        <div>
            @if (TempData["message"] != null)
            {
                <div class="alertmessage">@TempData["message"]</div>
            }
        </div>
        @Scripts.Render("~/bundles/jquery")

        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
