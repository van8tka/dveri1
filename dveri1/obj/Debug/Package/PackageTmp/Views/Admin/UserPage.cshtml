@using DALdv1
@model IEnumerable<User>
@{
    ViewBag.Title = "Пользователи сайта(администраторы)";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="tablecontent">
    <h3>Список пользователей сайта:</h3>
    <table class="table_dark tac fs09e">
        <tr>
            <th>Номер</th>
            <th>Имя пользователя</th>
            <th></th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.ID</td>
                <td>@i.Name</td>
                <td>@Html.ActionLink("Удалить", "DeleteUser", "Admin", new { id = i.ID }, new { @class = "tablebut wid100" })</td>
            </tr>
        }
    </table>
    <div class="marg1e">
     @Html.ActionLink("Добавить нового пользователя","Register","Account",null ,new { @class="tablebut"})
    </div>
    <hr />
</div>
<script>
    $(".admmen").removeClass("actadmin")
    $(".m10").addClass("actadmin")
</script>
 