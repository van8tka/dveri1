@model dveri1.Models.OplDostModel
@{
    ViewBag.Title = "Информация об оплате";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Content/tinymce/jquery.tinymce.min.js"></script>
<script src="~/Content/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinyMCE.init({
        mode: "textareas",
        plugins: "image, imagetools ,media ,contextmenu,link,textcolor"
    });
</script>
<div class="ml245">
    <div class="tac">
        <h2>Сведения об оплате</h2>
    </div>
    <div class="dOplInfo">
        @Html.Raw(Model.OplInfo)
    </div>
    @using (Html.BeginForm("SvedenijaOplata"))
    {
        <div class="mb20 mt20">
            <div class="tac">
                <label>Изменить сведения об оплате:</label>
            </div>
            @Html.TextAreaFor(m => m.OplInfo, new { @class = "areas", rows = 12 })
        </div>

        <input type="submit" value="Сохранить изменения" class="showadd mb30" />
    }
</div>
<script>
    $(".admmen").removeClass("actadmin")
    $(".m7").addClass("actadmin")
</script>
