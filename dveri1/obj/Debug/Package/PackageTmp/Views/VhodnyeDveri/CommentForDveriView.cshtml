
@model dveri1.Models.KartochkaTovaraModel
@using DALdv1;

<div>
    <div class="contentcomment">
        <div>
            @Html.ActionLink("Добавить отзыв", "CreateComment", "Comment", new {iddv = Model.Tovar.Id }, new { @class = "showadd" })
        </div>
        <hr />
        @if (Model.CommentVhDvList.Count() > 0)
        {
            foreach (CommentVhDveri i in Model.CommentVhDvList)
            {
                <div class="commentmain">
                    <div class="usercomment">
                        <div class="fll">
                            <img src="~/Content/ImgComment/user.png" style="width:48px;height:48px;"/>
                        </div>
                        <div class="ml20">
                            @i.Name
                        </div>
                        <div class="timecomment ml20 mt10">
                            @i.Date.ToShortDateString()
                        </div>
                        <div class="timecomment ml20 mt10">
                            @i.Date.ToShortTimeString()
                        </div>
                    </div>
                    <div class="informcomment">
                        <div>
                            <h3>@i.Heading</h3>
                        </div>
                        <div>
                            @switch (i.Stars)
                            {
                                case 1:
                                    {

                                        <label class="stargold"></label>
                                        for (int g = 0; g < 4; g++)
                                        {
                                            <label class="starwhite"></label>
                                        }
                                        break;
                                    }
                                case 2:
                                    {
                                        <label class="stargold"></label>
                                            <label class="stargold"></label>
                                        for (int g = 0; g < 3; g++)
                                        {
                                            <label class="starwhite"></label>
                                        }
                                        break;
                                    }
                                case 3:
                                    {
                                        <label class="stargold"></label>
                                            <label class="stargold"></label>
                                                <label class="stargold"></label>
                                        for (int g = 0; g < 2; g++)
                                        {
                                            <label class="starwhite"></label>
                                        }
                                        break;
                                    }
                                case 4:
                                    {
                                        for (int g = 0; g < 4; g++)
                                        {
                                            <label class="stargold"></label>
                                        }
                                        <label class="starwhite"></label>
                                        break;
                                    }
                                case 5:
                                    {
                                        for (int g = 0; g < 5; g++)
                                        {
                                            <label class="stargold"></label>
                                        }
                                        break;
                                    }
                            }
                        </div>

                        <div class="fll" style="width:100%;height:auto">
                            @i.Comment
                        </div>
                        @if (i.Response != null)
                        {
                            <div class="fll" style="width:100%;height:auto">
                                <div style="color:#000080;">
                                    Ответ администратора:
                                </div>
                                <div style="color:#2F4F4F;">
                                    @i.Response
                                </div>

                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div style="text-align:center">
                <h3>Еще никто не оставил свой отзыв!</h3>
            </div>
        }
        <hr />
        <div>
            @Html.ActionLink("Добавить отзыв", "CreateComment", "Comment", new {iddv=Model.Tovar.Id}, new { @class = "showadd" })
        </div>
    </div>
</div>