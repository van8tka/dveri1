@model  dveri1.Models.ModelUser
@{
     Layout = null;
}
<link href="~/Content/Site.css" rel="stylesheet" />
<title>Вход на сайт</title>
<div class="registr">
    @using (Html.BeginForm("Login", "Account"))
    {
        <h2>Введите логин и пароль для полного доступа:</h2>
     <div class="form-group">
         @Html.ValidationSummary(true)
         <div>
             @Html.LabelFor(m => m.NameUser)
             @Html.ValidationMessageFor(m => m.NameUser)
             @Html.TextBoxFor(m => m.NameUser, null, new { @class = "form-control ml0"})
         </div>
         <div>
             @Html.LabelFor(m => m.PasswordUser)
             @Html.ValidationMessageFor(m => m.PasswordUser)
            @Html.EditorFor(m=>m.PasswordUser, null, new { @class = "form-control" })
         </div>

         <input type="submit" value="Вход" class="showadd" />
         @Html.ActionLink("Отмена", "MetallicheskieVhodnyeDveri", "VhodnyeDveri")
     </div>
           
    }
</div>