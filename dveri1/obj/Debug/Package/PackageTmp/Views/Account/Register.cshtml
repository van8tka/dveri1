@model  dveri1.Models.ModelUser
@{
       Layout = null;
}
<title>Регистрация нового пользователя</title>
<link href="~/Content/Site.css" rel="stylesheet" />
<div style="width:400px;height:300px;margin:auto;">
    @using (Html.BeginForm("Register", "Account"))
    {
        <h2>Введите логин (имя) и пароль для нового пользователя:</h2>
        <div class="form-group">
            @Html.ValidationSummary(true)
           <div>
                @Html.LabelFor(m => m.NameUser)
                @Html.ValidationMessageFor(m => m.NameUser)
                @Html.TextBoxFor(m => m.NameUser, null, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.PasswordUser)
                @Html.ValidationMessageFor(m => m.PasswordUser)
                @Html.EditorFor(m => m.PasswordUser, null, new { @class = "form-control" })
            </div>

            <input type="submit" value="Зарегистрировать" class="showadd"/>
            @Html.ActionLink("Отмена", "UserPage", "Admin")
        </div>

    }
</div>