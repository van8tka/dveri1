@model dveri1.Models.ModelYstanovka
@{
    ViewBag.Title = "Информация о установке дверных конструкций и нетолько";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Content/tinymce/jquery.tinymce.min.js"></script>
<script src="~/Content/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinyMCE.init({
        mode: "textareas",
        theme: "modern",
        plugins: "image, imagetools ,media ,contextmenu,link,textcolor"
    });
</script>
<div class="ml245 pad25">
    <div class="tac">
        <h2>Информация для страницы "Установка"</h2>
    </div>
    <div class="dYstInf">
        @Html.Raw(Model.YstanovkaInfo)
    </div>
    @using (Html.BeginForm("AdminYstanovka"))
    {
        <div class="mb20 mt20">
            <div class="tac">
                <label>Изменить сведения:</label>
            </div>

            @Html.TextAreaFor(m => m.YstanovkaInfo, new { @class = "areas", rows = 12 })
        </div>

        <input type="submit" value="Сохранить" class="showadd mb30" />
        @Html.ActionLink("Отменить", "Panel", "Admin")
    }
</div>
<script>
    $(".admmen").removeClass("actadmin")
    $(".m12").addClass("actadmin")
</script>