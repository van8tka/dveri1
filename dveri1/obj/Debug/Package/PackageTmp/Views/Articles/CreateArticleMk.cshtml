@model dveri1.Models.ModelArticleCreate
@{
    ViewBag.Title = "Создание статьи";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Content/tinymce/jquery.tinymce.min.js"></script>
<script src="~/Content/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
        tinyMCE.init({
            mode: "specific_textareas",
            editor_selector: "areasarticl",
            theme: "modern",
            plugins: "image, imagetools ,media ,contextmenu,link,textcolor"
        });
</script>
<div class="ml245">
    <div class="tac">
        <h2>Создание статьи для сайта межкомнатных дверей</h2>
    </div>
    <div class="tac">
        <h3>Добавьте название, краткое описание и текст статьи.</h3>
    </div>
    <div>
        @using (Html.BeginForm("CreateArticleMk", "Articles", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.ArticleID)
            <div class="mb20 mt20 pad25">
                <div class="tac">
                    <label>Введите название статьи:</label>
                    @Html.ValidationMessageFor(m => m.ArticleName)
                    @Html.TextAreaFor(m => m.ArticleName, new { @class = "form-control wid880", rows = 3})
                    <label>Введите краткое описание статьи:</label>
                    @Html.ValidationMessageFor(m => m.ArticleDescript)
                    @Html.TextAreaFor(m => m.ArticleDescript, new { @class = "form-control wid880", rows = 6})
                </div>
                <div class="tac mr10 mt10">
                    <label>Введите основной текст статьи(также можете добавлять ссылки, изображения и видео):</label>
                    @Html.ValidationMessageFor(m => m.ArticleText)
                    @Html.TextAreaFor(m => m.ArticleText, new { @class = "areasarticl", rows = 35 })
                </div>

            </div>

                <input type="submit" value="Сохранить" class="showadd mb30" />
                @Html.ActionLink("Отмена", "AdminGetArticlesMk", "Articles")
        }
    </div>
</div>
<script>
        $(".admmen").removeClass("actadmin")
        $(".m8").addClass("actadmin")
</script>
