@model dveri1.Models.ModelArticles
@{
    ViewBag.Title = "Список статей";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="tablecontent">
    <h2>Перечень статей на сайте входных дверей</h2>
    <hr />
    <div class="marg1e">
        @Html.ActionLink("Добавить", "CreateArticle", "Articles", new { @class = "tablebut", style = "width:240px" })
        @Html.ActionLink("Статьи сайта межкомнатных дверей", "AdminGetArticlesMk", "Articles", new { @class = "tablebut", style = "width:250px" })
    </div>
    @if (Model.ArticlesList.Count() == 0)
    {
        <div class="tac">
            <h3 class="fs-lg">У вас на сайте еще нет ни одной статьи! Добавьте пожалуйста статью!</h3>
        </div>
    }
    else
    {
        <table class="table_dark fs07e wid980">
            <tr>
                <th class="tac">Номер</th>
                <th class="tac">Дата</th>
                <th>Название</th>
                <th>Описание</th>
                <th></th>
            </tr>
            @foreach (var i in Model.ArticlesList)
            {
                <tr>
                    <td class="tac">@Html.ActionLink(i.ID.ToString(), "CreateArticle", "Articles", new { id = i.ID }, null)</td>
                    <td class="tac">@i.Date</td>
                      <td>@i.Name</td>
                    <td>@i.Headings</td>
                    <td>@Html.ActionLink("Удалить", "DellArticle", "Articles", new { id = i.ID }, new { @class = "tablebut wid100 mb5"})
                       @Html.ActionLink("Мета тэги", "CreateSeoArticle", "Articles", new { id = i.ID }, new { @class = "tablebut wid100"})
                    </td>
                </tr>
            }
        </table>
    }
    <hr />
</div>

<script>
    $(".admmen").removeClass("actadmin")
    $(".m8").addClass("actadmin")
</script>
