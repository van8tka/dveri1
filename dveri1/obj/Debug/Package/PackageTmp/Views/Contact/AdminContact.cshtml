@model dveri1.Models.ContactModel
@{
    ViewBag.Title = "Управление контактными данными";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="tablecontent">
    <h3>Контактная информация</h3>
    <table class="table_dark fs09e">
        <tr>
            <th>Тип связи</th>
            <th>Номер абонента</th>
            <th></th>
        </tr>
        @foreach (var i in Model.ContactList)
        {
            <tr>
                <td>@Html.ActionLink(i.TypeSv , "ChangeContact", "Contact", new { id = i.Id },null)</td>
                <td>@Html.ActionLink(i.NumberSv, "ChangeContact", "Contact", new { id = i.Id },null)</td>             
                <td>@Html.ActionLink("Удалить", "DellContact", "Contact", new { id = i.Id}, new { @class = "tablebut wid100" })</td>
            </tr>
        }
    </table>
    <div class="marg1e">
        @Html.ActionLink("Добавить контакт", "CreateContact", "Contact", new { @class = "tablebut wid150"})
    </div>
    <hr />
</div>

<div class="tablecontent">
    <h3>Расписание работы</h3>
    <table class="table_dark fs09e"">
        <tr>
            <th>Дни работы</th>
            <th>Время работы</th>
            <th></th>
        </tr>
        @foreach (var i in Model.GrafikWorkList)
        {
            <tr>
                <td>@Html.ActionLink(i.NameDay, "ChangeGrafik", "Contact", new { id = i.Id },null)</td>
                <td>@Html.ActionLink(i.TimeWork, "ChangeGrafik", "Contact", new { id = i.Id },null)</td>
                <td>@Html.ActionLink("Удалить", "DellGrafik", "Contact", new { id = i.Id }, new { @class = "tablebut wid100"})</td>
            </tr>
        }
    </table>
    <div class="marg1e">
        @Html.ActionLink("Добавить время", "CreateGrafik", "Contact", new { @class = "tablebut wid150"})
    </div>
    <hr />
</div>

<div class="tablecontent">
    <h3>Адреса офисов</h3>
    <table class="table_dark fs09e">
        <tr>
            <th>Номер в списке</th>
            <th>Адрес</th>
            <th></th>
        </tr>
        @foreach (var i in Model.AdresList)
        {
            <tr>
                <td>@Html.ActionLink(i.Id.ToString(), "ChangeAdres", "Contact", new { id = i.Id },null)</td>
                <td>@Html.ActionLink(i.AdresName, "ChangeAdres", "Contact", new { id = i.Id },null)</td>
                <td>@Html.ActionLink("Удалить", "DellAdres", "Contact", new { id = i.Id }, new { @class = "tablebut wid100"})</td>
            </tr>
        }
    </table>
    <div class="marg1e">
        @Html.ActionLink("Добавить адрес", "CreateAdres", "Contact", new { @class = "tablebut wid150"})
    </div>
    <hr />
</div>



<div class="tablecontent">
    @if (Model.YrInformationProp != null)
    {
    <h3>Юридическая информация</h3>
    <table class="table_dark fs09e">
        <tr>
            <th>Номер в списке</th>
            <th>Сведения</th>
            <th></th>
        </tr>
       
            <tr>
                <td>@Html.ActionLink(Model.YrInformationProp.Id.ToString(), "ChangeYrInfa", "Contact", new { id = Model.YrInformationProp.Id }, null)</td>
                <td>@Html.ActionLink(Model.YrInformationProp.YrInfa, "ChangeYrInfa", "Contact", new { id = Model.YrInformationProp.Id }, null)</td>
                <td>@Html.ActionLink("Удалить", "DellYrInfa", "Contact", new { id = Model.YrInformationProp.Id }, new { @class = "tablebut wid100"})</td>
            </tr>
      
    </table>
    }
    else
    { <h3>Юридическая информация еще не добавлена!</h3>}
    <div class="marg1e">
        @Html.ActionLink("Добавить юр. информацию", "CreateYrInfa", "Contact", new { @class = "tablebut wid150"})
    </div>
    <hr />
  
</div>
@*рабочая почта*@
<div class="tablecontent">
    @if (Model.WorkEmails != null)
    {
        <h3>Адрес электронной почты(email), куда приходят все клиентские заказы и сообщения.</h3>
        <table class="table_dark fs09e">
            <tr>
                <th>Номер в списке</th>
                <th>Email</th>
                <th></th>
            </tr>

            <tr>
                <td>@Html.ActionLink(Model.WorkEmails.ID.ToString(), "CreateWorkEmail", "Contact", new { id = Model.WorkEmails.ID }, null)</td>
                <td>@Html.ActionLink(Model.WorkEmails.Email , "CreateWorkEmail", "Contact", new { id = Model.WorkEmails.ID }, null)</td>
                <td>@Html.ActionLink("Удалить", "DellWorkEmail", "Contact", new { id = Model.WorkEmails.ID }, new { @class = "tablebut wid100" })</td>
            </tr>

        </table>
    }
    else
    { <h3>Рабочий адрес электронной почты еще не добавлен!</h3>}
    <div class="marg1e">
        @Html.ActionLink("Добавить email", "CreateWorkEmail", "Contact",null, new { @class = "tablebut wid150" })
    </div>
    <hr />

</div>










